<div class="large-9 columns">
  <div class="panel callout radius">
     <%= search_form_for @q, remote: true do |f| %>
        <div class="row">
              <div class="small-2 columns">
                <!-- Search if the name field contains ... -->
                <%= f.label(:firstname_cont, 'FirstName', class: "right inline")  %>               
              </div>
              <div class="small-2 left columns">
                    <%= f.search_field :firstname_cont, class: "left inline" %>
              </div>

              
              <div class="small-2 columns">
                <!-- Search if the name field contains ... -->
                <%= f.label(:lastname_cont, "Lastname", class: "right inline")  %>
              </div>
              <div class="small-2 left columns">
                <%= f.search_field :lastname_cont %>
              </div>
              <div class="small-2 columns">
                <!-- Search if the name field contains ... -->
                <%= f.label(:number_cont, "Number", class: "right inline")  %>
              </div>
              <div class="small-2 left columns">
                <%= f.search_field :number_cont %>
              </div>
        </div>
        <div class="row">
          
        </div>
        <div class="row">
          
        </div>
        <div class="row">
          <div class="small-2 columns">
            <%= f.submit class: 'button tiny radius' %>           
          </div>
          <div class="small-2 columns">
            <%= link_to 'New Pat', new_pat_path, class: "button tiny radius", id: 'bNew', remote: true%>
          </div>
        </div>
      <% end %>
  </div>
     


  <table>
    <thead>
      <tr class="tableHeader">
        <!-- <th>FID</th> -->
        <th>Ward</th>
        <th><%= sort_link(@q, :firstname) %></th>
        <th><%= sort_link(@q, :lastname) %></th>
        <th><%= sort_link(@q, :number) %></th>
        <th><%= sort_link(@q, :doa, "Admission") %></th>
        <th><%= sort_link(@q, :dob, "Birth") %></th>
        <th><%= sort_link(@q, :dod, "Discharge") %></th>
        <th colspan="2"></th>
        <!-- <th></th>
        <th></th>-->
      </tr>
    </thead>
    <tbody>
      <% @pats.each do |pat| %>
        <tr>
          <!-- <td><%#= pat.facility_id %></td> -->
          <td><%= pat.ward %></td>
          <td><%= pat.firstname %></td>
          <td><%= pat.lastname %></td>
          <td><%= pat.number %></td>
          <td><%= pat.doa %></td>
          <td><%= pat.dob %></td>
          <td><%= pat.dod %></td>
          <!-- <td><%#= link_to 'Show', pat %></td> -->
          <td><%= link_to 'Edit', edit_pat_path(pat), class: 'lEdit', remote: true%></td>
          <td><%= link_to 'Destroy', pat, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="6" class="tableFooter">
          <%= paginate @pats %>
        </td>
        <td colspan="3" class="tableFooter">
          <%= @searchNumber %>  from <%= @totNumber %> total
        </td>
      </tr>
    </tbody> 
  </table>     
</div>